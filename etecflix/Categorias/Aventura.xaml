<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="etecflix.Categorias.Aventura"
             BackgroundColor="#2f2f30">


    <StackLayout Orientation="Vertical">
        <Image x:Name="logo" Style="{StaticResource logo_poster} "/>
        <Label Text="AVENTURA" Style="{StaticResource label_vermelho}" />

        <ScrollView>
            <Grid Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>
                
                
                <ImageButton Grid.Row="0" Grid.Column="0" x:Name="btnCapitaMarvel"
                             Style="{StaticResource button_poster}" Clicked="Btn_Open_CapitaMarvel"/>
                               
            </Grid>
        </ScrollView>
    </StackLayout>
</ContentPage>